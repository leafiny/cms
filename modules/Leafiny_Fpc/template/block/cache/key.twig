<div class="container-form">
    <form method="post" class="pure-form pure-form-stacked" action="{{ block.getFlushKeyUrl }}">
        <fieldset>
            <legend>{{ 'FPC Cache Key'|translate }}</legend>
            <div class="pure-g">
                <div class="pure-u-1 field required">
                    <label for="cache_key">{{ 'Key'|translate }} <span>*</span> :</label>
                    <input id="cache_key" type="text" class="pure-u-1 pure-u-xl-4-5" name="cache_key" value="" />
                    <p class="note">
                        {{ 'Flush cache for specific key. Leave empty for home.'|translate }}
                    </p>
                </div>
            </div>
        </fieldset>
        <div class="pure-u-1">
            <button type="submit" class="pure-button black">{{ 'Flush'|translate }} &check;</button>
        </div>
    </form>
</div>