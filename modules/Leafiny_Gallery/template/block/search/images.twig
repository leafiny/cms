{% set images = block.getImages %}
{% if images is not empty %}
    <div class="search-results">
        {% set results = images|length %}
        {{ results }} {% if results == 1 %}{{ 'image found'|translate }}{% else %}{{ 'images found'|translate }}{% endif %}
    </div>
    <div class="gallery pure-g">
        {% for image in images %}
            <div class="pure-u-1-2 pure-u-md-1-4">
                {{ child('gallery.image.default', {'image':image}) }}
            </div>
        {% endfor %}
    </div>
{% endif %}