{% set products = block.getProducts() %}
{% if products is not empty %}
    <div class="search-results">
        {% set results = products|length %}
        {{ results }} {% if results == 1 %}{{ 'product found'|translate }}{% else %}{{ 'products found'|translate }}{% endif %}
    </div>
    <div class="products search pure-g" id="catalog">
        {% for product in products %}
            <div class="pure-u-1-2 pure-u-lg-1-3">
                {{ child('catalog.product.default', {'product':product}) }}
            </div>
        {% endfor %}
    </div>
{% endif %}
